@using Kutuphane_Yonetimi.Models.Entity
@model List<TBL_HAREKET>
@{
    ViewBag.Title = "UyeKitapGecmis";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<br />
<h2>@ViewBag.UyeAdSoyad</h2>
<br />
<br />
<h2>İadde Etmedikleri</h2>

<table id="KitapTable" class="table table-striped table-hover scroll-table">
    <tr>
        <td>KİTAP ADI</td>
        <td>Alış Tarihi </td>
        <td>İade Tarihi</td>
        <td>Üye İade Tarihi</td>
        <td>Durumu</td>
    </tr>
    @foreach (var item in Model)
    {
        if (@item.IslemDurumu == false)
        {

            <tr>

                <td>@item.TBL_KITAP.AD</td>
                <td>@Convert.ToDateTime(@item.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(@item.IADETARIH).ToString("dd/MM/yyyy")</td>
                <td><span style="color: gray; font-style: italic;">İade Edilmedi</span> </td>

                <td> <span class="badge bg-danger">Teslim Edilmedi</span> </td>

            </tr>

        }
    }
</table>
<br />
<br />
<br />
<h2>Geçmiş Kitapları</h2>

<table id="KitapTable" class="table table-striped table-hover scroll-table">
    <tr>
        <td>KİTAP ADI</td>
        <td>Alış Tarihi </td>
        <td>İade Tarihi</td>
        <td>Üye İade Tarihi</td>
        <td>Durumu</td>
    </tr>
    @foreach (var item in Model)
    {
        if (@item.IslemDurumu == true)
        {
            <tr>
                <td>@item.TBL_KITAP.AD</td>
                <td>@Convert.ToDateTime(@item.ALISTARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(@item.IADETARIH).ToString("dd/MM/yyyy")</td>
                <td>@Convert.ToDateTime(@item.UyeGetirTarih).ToString("dd/MM/yyyy")</td>
                <td> <span class="badge bg-success">Teslim Edildi</span> </td>
            </tr>
        }
    }
</table>
<br />
<br />