@using Kutuphane_Yonetimi.Models.Entity
@model List<TBL_KATEGORI>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Kategoriler</h2>
    <div class="d-flex align-items-center">
        <input type="text" id="searchBox" class="form-control me-2" placeholder="Kategori ara..." />
    </div>
    <a href="/Kategori/KategoriEkle" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
    </a>
</div>

<table class="table table-striped table-hover scroll-table">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
           
        </tr>
    </thead>
    <tbody id="kategoriTable">
        @foreach (var ktg in Model)
        {
            <tr>
                <td>@ktg.ID</td>
                <td>@ktg.AD</td>
                    <td>
                        <a href="/Kategori/KategoriSil/@ktg.ID" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                        <a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-success btn-sm">
                            <i class="bi bi-pencil"></i> Güncelle
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

        <script>
            document.getElementById('searchBox').addEventListener('keyup', function () {
                let filter = this.value.toLowerCase();
                document.querySelectorAll('#kategoriTable tr').forEach(row => {
                    let kategoriAdi = row.cells[1].textContent.toLowerCase();
                    row.style.display = kategoriAdi.includes(filter) ? '' : 'none';
                });
            });
        </script>


        <style>
            .scroll-table thead,
            .scroll-table tbody tr {
                display: table;
                width: 100%;
                table-layout: fixed;
            }

            .scroll-table tbody {
                display: block;
                max-height: 730px; /* Yaklaşık 10 satır için */
                overflow-y: auto;
            }
        </style>
