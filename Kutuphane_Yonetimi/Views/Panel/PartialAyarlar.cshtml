@model Kutuphane_Yonetimi.Models.Entity.TBL_UYELER

@* Telefon hata mesajı *@
@if (TempData["TelHata"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["TelHata"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@using (Html.BeginForm("Index2", "Panel", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Ad</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Soyad</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Kullanıcı Adı</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Şifre</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" value="********" readonly />
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#sifreModal">
                Şifre Güncelle
            </button>
        </div>
    </div>

    <div class="form-group">
        <label>Fotoğraf</label>

        <div class="mb-2">
            <img id="fotoPreview" src="@Url.Content(Model.FOTOGRAF)" class="img-thumbnail" style="max-width:150px;" />
        </div>

        <input type="file" name="FOTORAF" id="FOTORAF" class="form-control" accept=".jpg,.jpeg,.png,.bmp" />
        <small class="text-muted">jpg, jpeg, png, bmp</small>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Okul</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Telefon</label>
        <div class="col-sm-10">
            <input type="text"
                   name="TELEFON"
                   class="form-control"
                   value="@(TempData["TelDeger"] ?? Model.TELEFON)"
                   placeholder="5321234567" />
            <small class="text-muted">Başında 0 olmadan 10 hane (örn: 5321234567)</small>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-danger">Güncelle</button>
        </div>
    </div>
}


<div class="modal fade" id="sifreModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">Şifre Güncelle</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                @using (Html.BeginForm("SifreGuncelle", "Panel", FormMethod.Post))
                {
               

                    <div class="form-group">
                        <label>Eski Şifre</label>
                        <div class="input-group">
                            <input type="password" name="EskiSifre" class="form-control" id="EskiSifre" required />
                            <div class="input-group-append">

                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#EskiSifre">
                                    👁
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Yeni Şifre</label>
                        <div class="input-group">
                            <input type="password" name="YeniSifre" class="form-control" id="YeniSifre" required />
                            <div class="input-group-append">
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#YeniSifre">👁</button>

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Yeni Şifre (Tekrar)</label>
                        <div class="input-group">
                            <input type="password" name="YeniSifreTekrar" class="form-control" id="YeniSifreTekrar" required />
                            <div class="input-group-append">
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="#YeniSifreTekrar">👁</button>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-warning btn-block">Güncelle</button>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Sayfa tamamen yüklendiğinde çalıştır
    document.addEventListener("DOMContentLoaded", function () {

        
        //  FOTOĞRAF ÖNİZLEME KODU 
        
        var fotoInput = document.getElementById("FOTORAF");

        // Element sayfada var mı kontrol et
        if (fotoInput) {
            fotoInput.addEventListener("change", function () {
                var file = this.files && this.files[0];
                if (!file) return;

                var url = URL.createObjectURL(file);
                var imgPreview = document.getElementById("fotoPreview");

                if (imgPreview) {
                    imgPreview.src = url;
                }
            });
        }

        
    });
</script>




