@using Kutuphane_Yonetimi.Models.Entity
@model List<TBL_DUYURULAR>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}


<br />
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Duyurular</h2>
    <div class="d-flex align-items-center">
        <input type="text" id="searchBox" class="form-control me-2" placeholder="Duyuru ara..." />
    </div>
    <div></div>    

</div>

<table class="table table-striped table-hover scroll-table">
    <thead class="table-dark">
        <tr>
            <th>Kategori</th>
            <th>İçerik</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody id="personelTable">
        @foreach (var duy in Model)
        {
            <tr>

                <td>@duy.KATEGORI</td>
                <td>@duy.ICERIK</td>
                <td>@Convert.ToDateTime(duy.TARIH).ToString("dd/MM/yyyy")</td>

            </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<script>
    document.getElementById('searchBox').addEventListener('keyup', function () {
        let filter = this.value.toLowerCase();
        document.querySelectorAll('#personelTable tr').forEach(row => {
            let Duyuru = row.cells[1].textContent.toLowerCase();
            row.style.display = Duyuru.includes(filter) ? '' : 'none';
        });
    });
</script>


<style>
    .scroll-table thead,
    .scroll-table tbody tr {
        display: table;
        width: 100%;
        table-layout: fixed;
    }

    .scroll-table tbody {
        display: block;
        max-height: 400px; /* Yaklaşık 10 satır için */
        overflow-y: auto;
    }
</style>
