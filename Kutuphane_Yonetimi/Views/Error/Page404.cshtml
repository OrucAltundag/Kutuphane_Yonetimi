@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <title>Hata Sayfası</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link rel="stylesheet" href="/WebError/css/font-awesome.min.css" />
    <link href="/WebError/css/popuo-box.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/WebError/css/style.css" rel='stylesheet' type='text/css' media="all">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600" rel="stylesheet">
</head>

<body>

    <h1 class="error">Hata Sayfası</h1>
    <div class="top-w3ls">
        <h2>404</h2>
        <h3>ÜZGÜNÜZ</h3>
        <p>
            Aradığınız sayfa bulunamadı. Ana sayfaya dönmek için <a href="/">tıklayın</a>
        </p>

        <h5>veya</h5>
        <div class="row-col">
            <div class="banner-agileits-btm">
                <div class="w3layouts_more-buttn">
                    <a href="#small-dialog1" class="play-icon popup-with-zoom-anim">Bize Ulaşın</a>
                </div>
                <div id="small-dialog1" class="mfp-hide w3ls_small_dialog wthree_pop">
                    <div class="agileits_modal_body">
                        <div class="newsletter">
                            <div class="letter-w3ls">
                                <h4>İletişim</h4>
                                <form action="#" method="post">
                                    <div class="form-left-w3l">
                                        <input type="text" name="name" placeholder="Adınız" required>
                                    </div>
                                    <div class="form-left-w3l">
                                        <input type="email" name="email" placeholder="E-Posta" required>
                                    </div>
                                    <div class="form-control-w3l">
                                        <textarea name="Message" placeholder="Mesajınız..." required></textarea>
                                    </div>
                                    <div class="btnn">
                                        <button type="submit">Gönder</button><br>
                                    </div>
                                </form>
                                <div class="clear"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="copyright">
        <div class="icons">
            <ul>
                <li><a href="#"><span class="fa fa-facebook"></span></a></li>
                <li><a href="#"><span class="fa fa-twitter"></span></a></li>
                <li><a href="#"><span class="fa fa-rss"></span></a></li>
                <li><a href="#"><span class="fa fa-vk"></span></a></li>
            </ul>
        </div>
        <p>&copy; 2025 Hata Sayfası. Tüm Hakları Saklıdır.</p>
    </div>

    <script type='text/javascript' src='/WebError/js/jquery-2.2.3.min.js'></script>
    <script src="/WebError/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('.popup-with-zoom-anim').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });
        });
    </script>
</body>

</html>
