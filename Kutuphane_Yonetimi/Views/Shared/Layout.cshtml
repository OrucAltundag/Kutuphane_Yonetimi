
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Kütüphane Sistemi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            padding-top: 70px;
        }

        footer {
            margin-top: 40px;
            padding: 20px 0;
            background-color: #f5f5f5;
            text-align: center;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">📚 Kütüphane</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Kategori")">Kategoriler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Kitap/Index/">Kitaplar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Uyeler/Index/">Üyeler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Yazar/Index/">Yazarlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Personel/Index/">Personeller</a>
                    </li>

                    <!-- Açılır menü: İşlemler -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            İşlemler
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("KitapAl", "Islem")">Kitap Al</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("KitapIade", "Islem")">Kitap İade</a></li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Kasa/Index/">Kasa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Ayarlar/Index/">Ayarlar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Yardım/Index/">Yardım</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Çıkış</a>
                    </li>

                </ul>

                <span class="navbar-text text-light">
                    @DateTime.Now.ToShortDateString()
                </span>
            </div>
        </div>
    </nav>   

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <span class="text-muted">© @DateTime.Now.Year - Kütüphane Yönetim Sistemi</span>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

