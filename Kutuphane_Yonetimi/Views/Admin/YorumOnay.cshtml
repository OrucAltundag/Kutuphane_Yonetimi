@model List<Kutuphane_Yonetimi.Models.Entity.TBL_DUYURU_YORUM>
@{
    ViewBag.Title = "YorumOnay";
    Layout = "~/Views/Shared/Layout.cshtml";
}





<h2>Onay Bekleyen Duyuru Yorumları</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>DuyuruID</th>
            <th>ÜyeID</th>
            <th>Yorum</th>
            <th>Tarih</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var y in Model)
        {
            <tr>
                <td>@y.ID</td>
                <td>@y.DUYURU_ID</td>
                <td>@y.UYE_ID</td>
                <td>@y.MESAJ</td>
                <td>@y.TARIH</td>
                <td style="display:flex; gap:6px;">
                    @using (Html.BeginForm("YorumOnayla", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", y.ID)
                        <button class="btn btn-success btn-sm">Onayla</button>
                    }

                    @using (Html.BeginForm("YorumSil", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", y.ID)
                        <button class="btn btn-danger btn-sm">Sil</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>


