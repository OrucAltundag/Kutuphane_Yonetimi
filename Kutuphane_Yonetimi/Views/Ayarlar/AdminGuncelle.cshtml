@model Kutuphane_Yonetimi.Models.Entity.TBL_ADMIN
@{
    ViewBag.Title = "Admin Güncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Admin Güncelle</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("AdminGuncelle", "Ayarlar", FormMethod.Post))
                    {
                        <div class="form-group mb-3">
                            @Html.LabelFor(k => k.ID, "Admin ID")
                            @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @readonly = "readonly" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(k => k.KULLANICI, "Kullanıcı Adı")
                            @Html.TextBoxFor(k => k.KULLANICI, new { @class = "form-control", placeholder = "Kullanıcı adını giriniz" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(k => k.SIFRE, "Şifre")
                            @Html.TextBoxFor(k => k.SIFRE, new { @class = "form-control", type = "password", placeholder = "Şifre giriniz" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-block">Kaydet</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
