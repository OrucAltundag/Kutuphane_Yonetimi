@using Kutuphane_Yonetimi.Models.Entity
@model List<TBL_DUYURULAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Duyurular</h2>
    <div class="d-flex align-items-center">
        <input type="text" id="searchBox" class="form-control me-2" placeholder="Duyuru ara..." />
    </div>
    <a href="/Duyuru/YeniDuyuru/" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Duyuru Ekle
    </a>
</div>

<table class="table table-striped table-hover scroll-table">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Kategori</th>
            <th>İçerik</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody id="personelTable">
        @foreach (var duy in Model)
        {
            <tr>
                <td>@duy.ID</td>
                <td>@duy.KATEGORI</td>
                <td>
                    <button class="btn btn-warning btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#guncelleModal"
                            data-id="@duy.ID"
                            data-baslik="@duy.KATEGORI"
                            data-icerik="@duy.ICERIK">
                        <i class="bi bi-eye"></i> Detay
                    </button>
                </td>
                <td>@Convert.ToDateTime(duy.TARIH).ToString("dd/MM/yyyy")</td>
                <td>
                   
                    <a href="/Duyuru/DuyuruSil/@duy.ID" class="btn btn-danger btn-sm">
                        <i class="bi  bi-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<script>
    document.getElementById('searchBox').addEventListener('keyup', function () {
        let filter = this.value.toLowerCase();
        document.querySelectorAll('#personelTable tr').forEach(row => {
            let Duyuru = row.cells[1].textContent.toLowerCase();
            row.style.display = Duyuru.includes(filter) ? '' : 'none';
        });
    });
</script>


<style>
    .scroll-table thead,
    .scroll-table tbody tr {
        display: table;
        width: 100%;
        table-layout: fixed;
    }

    .scroll-table tbody {
        display: block;
        max-height: 400px; /* Yaklaşık 10 satır için */
        overflow-y: auto;
    }
</style>

<!-- Modal -->
<div class="modal fade" id="guncelleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            @using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
            {
                <div class="modal-header">
                    <h5 class="modal-title">Duyuru Güncelle</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <!-- ID gizli -->
                    <input type="hidden" id="duyuruId" name="ID" />

                    <div class="mb-3">
                        <label>Başlık</label>
                        <input type="text" class="form-control" id="duyuruBaslik" name="KATEGORI" />
                    </div>

                    <div class="mb-3">
                        <label>İçerik</label>
                        <textarea class="form-control" id="duyuruIcerik" name="ICERIK" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Güncelle butonuna tıklandığında modal içini doldur
    var guncelleModal = document.getElementById('guncelleModal');
    guncelleModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        document.getElementById("duyuruId").value = button.getAttribute("data-id");
        document.getElementById("duyuruBaslik").value = button.getAttribute("data-baslik");
        document.getElementById("duyuruIcerik").value = button.getAttribute("data-icerik");
    });
</script>