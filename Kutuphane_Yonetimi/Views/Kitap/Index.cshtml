@using Kutuphane_Yonetimi.Models.Entity
@model List<TBL_KITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Kitaplar</h2>
    <div class="d-flex align-items-center">
        <input type="text" id="searchBox" class="form-control me-2" placeholder="Kitap Ara..." />
    </div>
    <a href="/Kitap/KitapEkle/" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Yeni Kitap Ekle
    </a>
</div>


<table id="KitapTable" class="table table-striped table-hover scroll-table">
    <tr>
        <td>ID</td>
        <td>KİTAP ADI</td>
        <td>YAZARI</td>
        <td>KATEGORİSİ</td>
        <td>BASIM YILI</td>
        <td>YAYIN EVİ</td>
        <td>SAYFA</td>
        <td>DURUM</td>
        <td>İŞLEMLER</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.AD</td>
            <td>
                @(item.TBL_YAZAR != null
        ? item.TBL_YAZAR.AD + " " + item.TBL_YAZAR.SOYAD
        : "—")
            </td>
            <td>
                @(item.TBL_KATEGORI != null
        ? item.TBL_KATEGORI.AD
        : "—")
            </td>

            <td>@item.BASIMYIL</td>
            <td>@item.YAYINEVI</td>
            <td>@item.SAYFA</td>
            <td>@item.DURUM</td>  @*<td>@(item.DURUM ? "Mevcut" : "Ödünç Alınmış")</td>*@
            <td>
                <a class="btn btn-primary" href="/Kitap/KitapGetir/@item.ID">Düzenle</a>
                <a class="btn btn-danger" href="/Kitap/KitapSil/@item.ID">Sil</a>
            </td>

        </tr>
    }
</table>


<script>
    document.getElementById('searchBox').addEventListener('keyup', function () {
        let filter = this.value.toLowerCase();
        document.querySelectorAll('#KitapTable tr').forEach(row => {
            let KitapAdi = row.cells[1].textContent.toLowerCase();
            row.style.display = KitapAdi.includes(filter) ? '' : 'none';
        });
    });
</script>


<style>
    .scroll-table thead,
    .scroll-table tbody tr {
        display: table;
        width: 100%;
        table-layout: fixed;
    }

    .scroll-table tbody {
        display: block;
        max-height: 800px; /* Yaklaşık 10 satır için */
        overflow-y: auto;
    }
</style>
