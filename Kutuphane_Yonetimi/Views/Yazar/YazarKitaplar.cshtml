@using Kutuphane_Yonetimi.Models.Entity
@model List<TBL_KITAP>
@{
    ViewBag.Title = "YazarKitaplar";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>@ViewBag.YazarAdSoyad</h2>


<table id="KitapTable" class="table table-striped table-hover scroll-table">
    <tr>

        <td>KİTAP ADI</td>
        <td>KATEGORİSİ</td>
        <td>BASIM YILI</td>
        <td>YAYIN EVİ</td>
        <td>SAYFA</td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.AD</td>
            <td>
                @(item.TBL_KATEGORI != null
        ? item.TBL_KATEGORI.AD
        : "—")
            </td>
            <td>@item.BASIMYIL</td>
            <td>@item.YAYINEVI</td>
            <td>@item.SAYFA</td>


        </tr>
    }
</table>