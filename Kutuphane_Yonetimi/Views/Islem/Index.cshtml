@using Kutuphane_Yonetimi.Models.Entity
@model List<TBL_HAREKET>
@{
    ViewBag.Title = "Index";
}



<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>İadesi Alınan Kitap Listesi</h2>
    <div class="d-flex align-items-center">
        <input type="text" id="searchBox" class="form-control me-2" placeholder="Kitap Ara..." />
    </div>

</div>


<table id="KitapTable" class="table table-striped table-hover scroll-table">
    <tr>
        <td>İşlem ID</td>
        <td>KİTAP ADI</td>
        <td>Üye</td>
        <td>Personel</td>
        <td>Alış Tarihi </td>
        <td>Üye İade Tarihi</td>
        <td>İŞLEMLER</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.TBL_KITAP.AD</td>
            <td>@item.TBL_UYELER.AD &nbsp @item.TBL_UYELER.SOYAD</td>
            <td>@item.TBL_PERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(@item.ALISTARIH).ToString("dd/MM(yyyy")</td>
            <td>@Convert.ToDateTime(@item.UyeGetirTarih).ToString("dd/MM(yyyy")</td>
            <td> <a class="btn btn-primary btn-sm" href="">Detaylar</a></td>

        </tr>
    }
</table>


<script>
    document.getElementById('searchBox').addEventListener('keyup', function () {
        let filter = this.value.toLowerCase();
        document.querySelectorAll('#KitapTable tr').forEach(row => {
            let KitapAdi = row.cells[1].textContent.toLowerCase();
            row.style.display = KitapAdi.includes(filter) ? '' : 'none';
        });
    });
</script>


<style>
    .scroll-table thead,
    .scroll-table tbody tr {
        display: table;
        width: 100%;
        table-layout: fixed;
    }

    .scroll-table tbody {
        display: block;
        max-height: 800px; /* Yaklaşık 10 satır için */
        overflow-y: auto;
    }
</style>
