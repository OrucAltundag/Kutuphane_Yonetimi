@model Kutuphane_Yonetimi.Models.Entity.TBL_MESAJLAR
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Kütüphane | Yeni Mesaj</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/AdminLTE/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/AdminLTE/plugins/summernote/summernote-bs4.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                @Html.Action("Partial1")

                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                        </div>

                        @using (Html.BeginForm("YeniMesaj", "Mesajlar", FormMethod.Post))
                        {
                            <div class="card-body">
                                <div class="form-group">
                                    <input class="form-control" name="ALICI" placeholder="Kime:" required />
                                </div>
                                <div class="form-group">
                                    <input class="form-control" name="KONU" placeholder="Konu:" required />
                                </div>
                                <div class="form-group">
                                    <textarea id="compose-textarea" name="ICERIK" class="form-control" style="height: 150px"></textarea>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="far fa-envelope"></i> Gönder
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE/dist/js/adminlte.min.js"></script>
    <script src="~/AdminLTE/dist/js/demo.js"></script>
    <script src="~/AdminLTE/plugins/summernote/summernote-bs4.min.js"></script>

    <script>
        $(function () {
            $('#compose-textarea').summernote()
        });
    </script>
</body>
</html>
