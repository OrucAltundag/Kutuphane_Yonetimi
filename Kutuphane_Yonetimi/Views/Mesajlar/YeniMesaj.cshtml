@model Kutuphane_Yonetimi.Models.Entity.TBL_MESAJLAR
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Kütüphane | Yeni Mesaj</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                @Html.Action("Partial1")

                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                        </div>

                        @using (Html.BeginForm("YeniMesaj", "Mesajlar", FormMethod.Post))
                        {
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.ALICI, new { @class = "form-control", @placeholder = "Kime:" })
                                    @Html.ValidationMessageFor(x => x.ALICI, "", new { @style = "color:red" })
                                </div>

                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.KONU, new { @class = "form-control", @placeholder = "Konu:" })
                                    @Html.ValidationMessageFor(x => x.KONU, "", new { @style = "color:red" })
                                </div>

                                <div class="form-group">
                                    @Html.TextAreaFor(x => x.ICERIK, new { @class = "form-control", @style = "height:300px", @id = "editor1" })
                                    @Html.ValidationMessageFor(x => x.ICERIK, "", new { @style = "color:red" })
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="float-right">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="far fa-envelope"></i> Gönder
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var editorElement = document.getElementById('editor1');
            if (editorElement) {
                CKEDITOR.replace('editor1');
            }
        });
    </script>
</body>
</html>